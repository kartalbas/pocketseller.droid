            style="@style/TextViewStyleDocumentdetailSubItem"
            android:layout_weight=".35"
            android:gravity="left"
            android:text="kiphone12@gmail.com"
            local:MvxBind="Text User" />
        <TextView
            style="@style/TextViewStyleDocumentdetailSubItem"
            android:layout_weight=".15"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="99999"
            local:MvxBind="Text Docnumber" />
        <TextView
            style="@style/TextViewStyleDocumentdetailSubItem"
            android:layout_weight=".15"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="9999"
            local:MvxBind="Text TotalParcels, Converter=DecimalString" />
    </LinearLayout>
